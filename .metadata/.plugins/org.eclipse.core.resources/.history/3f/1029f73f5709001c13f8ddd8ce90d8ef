package flowpane;

import java.util.ArrayList;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.FlowPane;
import javafx.stage.Stage;

public class Ex01 extends Application{

	@Override
	public void start(Stage arg0) throws Exception {
		
		FlowPane flowPane = new FlowPane();
		ArrayList<Button> bs = new ArrayList<Button>();
		for(int i = 1; i <=3; i++ ) {
			Button btn = new Button("btn" + i);
			bs.add(btn);
			flowPane.getChildren().add(bs.get(i));
		}
		
		/*Button btn01 = new Button("btn01");
		Button btn02 = new Button("btn02");
		Button btn03 = new Button("btn03");
		
		flowPane.getChildren().add(btn01);
		flowPane.getChildren().add(btn02);
		flowPane.getChildren().add(btn03);
		*/
		Scene scene = new Scene(flowPane,200,100);
		arg0.setScene(scene);
		arg0.show();
	}
	public static void main(String[] args) {
		launch(args);
	}
}
